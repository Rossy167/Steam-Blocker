<Window x:Class="Steam_Blocker_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steam_Blocker_UI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Steam-Blocker-UI" Height="150" Width="350">
    <Grid Margin="0,0,0,0">
        <Button Name="BlockSteam" Content="Block Steam" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" Height="44" Width="90" Click="Button_Click"/>
        <Button Content="Unblock Steam" HorizontalAlignment="Left" Margin="105,18,0,0" VerticalAlignment="Top" Height="44" Width="90" Click="Button_Click_1"/>
        <Button Content="Press this on first use" HorizontalAlignment="Left" Margin="200,18,0,0" VerticalAlignment="Top" Height="44" Width="132" Click="Button_Click_2"/>
        <TextBox Name="CommandTextBox" HorizontalAlignment="Left" Margin="10,67,0,0" Text="Waiting for Commmand" TextWrapping="Wrap" VerticalAlignment="Top" Width="291"/>
    </Grid>
</Window>
